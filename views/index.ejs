    <% for(i = 0; i < Director.length; i++) { %>
    <a id="<%= Director[i]%>" onClick="getProfile(this.id);" style="cursor:pointer"><%= Director[i]%></a>
    <% } %>

    <img id="img" width="200px" height="200px">
