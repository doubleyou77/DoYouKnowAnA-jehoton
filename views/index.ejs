    <script>
        async function getProfile(id) {
            const result = await axios.get('/director', {
                params: {
                    contents: id
                }
            });
            console.log(id, String(result.data));
            document.getElementById('img').src = `img/${id}.jpg`;
            switch(id) {
                case '조재호' : document.getElementById('img').src = `img/${id}.jpg`; break;
                case '안용호' : document.getElementById('img').src = `img/${id}.jpg`; break;
                case '심영수' : document.getElementById('img').src = `img/${id}.jpg`; break;
                case '이혜찬' : document.getElementById('img').src = `img/${id}.jpg`; break;
                case '민경록' : document.getElementById('img').src = `img/${id}.jpg`; break;
                case '김형진' : document.getElementById('img').src = `img/${id}.jpg`; break;
                default : document.getElementById('img').src = `img/notFound.png`; break;
            }
            document.getElementById('content').innerHTML = String(result.data);
        }

    </script>
</body>
</html>